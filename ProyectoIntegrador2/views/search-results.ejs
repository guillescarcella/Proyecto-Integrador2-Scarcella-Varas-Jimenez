<%- include('./partials/head.ejs') %>

<body>
	<!-- Header -->
	<%- include('./partials/headerIndex.ejs') %>
	<!-- /Header -->

			<div class="col-12">
				<h2 class="products-title">Resultados de búsqueda por Nombre</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<div class="container products-wrapper">
				<div class="row">
					<% if (productosDescripcion.length !=0 ){ %> 
					<!-- Show the "ultimos" products -->
					<% for (let i = 0; i < productosNombre.length; i++){ %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/products/<%= productosNombre[i].id %>">
								<figure class="product-box_image">
									<img src="/images/products/<%= productosNombre[i].foto %>" alt="<%= productosNombre[i].nombre%>">
								</figure>
								<article class="product-box_data">
									<h2><%= productosNombre[i].nombre %></h2>
									<p><%= productosNombre[i].descripcion %></p>
									<p>Comentarios: 12</p>
								</article>
							</a>
						</section>
					</div>
					<% } %> 
					<% } else { %> 
						<h2>No se encontraron resultados para su busqueda</h2>
						<% } %>
				</div>
			</div>

			<div class="col-12">
				<h2 class="products-title">Resultados de búsqueda por Descripción</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<div class="container products-wrapper">
				<div class="row">
				<% if (productosDescripcion.length !=0 ){ %> 
					<!-- Show the "ultimos" products -->
					<% for (let i = 0; i <  productosDescripcion.length; i++){ %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/products/<%= productosDescripcion[i].id %>">
								<figure class="product-box_image">
									<img src="/images/products/<%=  productosDescripcion[i].foto %>" alt="<%=  productosDescripcion[i].nombre%>">
								</figure>
								<article class="product-box_data">
									<h2><%= productosDescripcion[i].nombre %></h2>
									<p><%= productosDescripcion[i].descripcion %></p>
									<p>Comentarios: 12</p>
								</article>
							</a>
						</section>
					</div> 
					<% } %> 
				<% } else { %> 
					<h2>No se encontraron resultados para su busqueda</h2>
					<% } %>

				</div>
			</div>


	<!-- footer -->
	<%- include('./partials/footer.ejs') %>
	<!-- /footer -->
</body>

</html>