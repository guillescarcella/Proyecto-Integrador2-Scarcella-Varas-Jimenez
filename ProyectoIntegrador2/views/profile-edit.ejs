<%- include('./partials/head.ejs') %>

<body>
	<!-- Header -->
	<% if (usuario) {%>
		<%- include('./partials/headerLogueado.ejs') %>
	<%} else{ %>
		<%- include('./partials/headerIndex.ejs') %>
	<% }%>
	<!-- /Header -->

	<!-- Novedades -->
	
			<div class="col-12">
				<h2 class="products-title">Editar mi perfil</h2>
			</div>
			<form action="/profile/updateUsuario/<%= editar.id %>" method="post" class="formulario">
				<div>
					<label for="mail" class="form-label"></label>
					<input type="email" name="mail" value="<%=editar.email%>" placeholder="Email*"class="form-input">
				</div>
				<div>
					<label for="user" class="form-label"></label>
					<input type="text" name="user" value="<%=editar.username%>" placeholder="Usuario*" class="form-input">
				</div>
				<div>
					<label for="contraseña" class="form-label"></label>
					<input type="password" name="pass" value="<%=editar.contra%>" placeholder="Contraseña*" class="form-input" >
				</div>
				<div>
					<label for="fecha" class="form-label">Fecha de nacimiento:</label>
					<input type="date" name="fecha" value="<%=editar.fecha%>" placeholder="Fecha de nacimiento" class="form-input">
				</div>
				<div>
					<label for="documento" class="form-label"></label>
					<input type="number" name="documento" value="<%=editar.dni%>" placeholder="DNI*" class="form-input">
				</div>
				
				<div>
					<button type="submit" class="form-boton">Editar perfil</button> 
				</div>
			</form>
			<!-- Show the "ultimos" products -->



	<!-- footer -->
	<%- include('./partials/footer.ejs') %>
	<!-- /footer -->
</body>

</html>