<%- include('./partials/head.ejs') %>
<body>
	<!-- Header -->
	
	<!-- /Header -->
	<%- include('./partials/headerIndex.ejs') %>
	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%= product.nombre %></h2> 
			<p class="product-detail-description">
				<a href="/products/product-edit/<%= product.id %>">Editar</a>
				<a href="/products/delete/<%= product.id %>">Borrar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="/images/products/<%= product.foto %>" alt="" class="product-detail-img">
					<p class="product-detail-description"> <%= product.descripcion %> </p>
						
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<% if (comentarios.length=0) { %>
							<h2>No hay comentarios</h2>
						<% } else { %>
						 
						<% for ( let i = 0; i < product.comentario.length; i++){ %>	
						<article>
							<img src="/images/users/<%= product.comentario[i].FkUser.foto%>" alt="">
							<div class="data">
								<p class="user">
								<strong> <a href="/users/profile/<%= product.comentario[i].FkUser.id %>"><%= product.comentario[i].FkUser.username%> </a> </strong>
								 <%= product.comentario[i].texto %>
							</p>
							</div>
						</article>
					<% }} %>
					<form class="form" action="/products/product/<%= product.id %>" method="post">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>

					<!-- if... HAY QUE DEFINIR COMO HACER PARA AGREGAR EL COMENTARIO
						<form class="form" action="/products/product/<%= product.id %>" method="post">
							<input class="form-input" type="text" value="" placeholder="Agregar comentario">
							<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
						</form>
					else:
						<h2>Debe iniciar sesion para agregar comentarios</h2>
					-->
					</section>
					
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('./partials/footer.ejs') %>
	<!-- /footer -->

</body>	
</html>